<% content_for :subheader do %>
<section id="subheader">
  <div class="container">
    <div class='row-fluid'>
      <div class='span12'>
        <h1 class='subheader-title'>A collection of Startup Events in Puerto Rico</h1>
      </div>
    </div>
  </div>
</section>
<% end %>
<section id='events'>
  <div class='container'>
    <div class="row-fluid">
      <div class="subscribe-to-events span4 offset8">
        <span>Subscribe to Events</span>
        <a href="http://feedpress.me/sopr">
          <%= image_tag "rss.png" %>
        </a>
        <a href="<%= events_url(format: :ics, protocol: 'webcal') %>">
          <%= image_tag "calendar.png" %>
        </a>
      </div>
    </div>
    <div class='row-fluid'>
     <div class='span12'>
      <% @events.group_by { |t| t.date.month }.each do |month, events| %>
        <div class='row-fluid'>
          <h3 class='group-monthly-title'><%= Date::MONTHNAMES[month] %></h3>
        </div>
        <div class='row-fluid'>
          <% for event in events %>
            <div class='span6'>
             <div class='event-card'>
              <a href="<%= event.url %>">
               <div class='event-image'>
                <%= image_tag event.image_url(:eventphoto), :class => 'eimage', :style =>  'width:100%;' %>
               </div>
               <div class='event-content'>
                <h1 class='event-title'><%= event.name %></h1>
                <h2 class='event-place'><%= event.place %></h2>
                <h3 class='event-time-date'><%= event.date.strftime("%B %d @ %I:%M %p") %></h3>
               </div>
              </a>
             </div>
            </div>
         <% end %>
        </div>
      <% end %>
     </div>
    </div>
  </div>
</section>

