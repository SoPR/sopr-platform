<% content_for :subheader do %>
<section id="subheader">
  <div class="container">
    <div class='row-fluid'>
      <div class='span12'>
        <h1 class='subheader-title'>A collection of Startup Events in Puerto Rico</h1>
      </div>
    </div>
  </div>
</section>
<% end %>
<section id='events'>
  <div class='container'>
    <div class='row-fluid'>
     <div class='span12'> 
      <%= @events.group_by { |t| t.created_at.month }.each do |month, events| %>
        <div class='row-fluid'>
          <h3 class='group-monthly-title'><%= Date::MONTHNAMES[month] %></h3>
        </div>
        <div class='row-fluid'>
          <% for event in events %>
            <div class='span6'>
             <div class='event-card'>
              <a href="<%= event.url %>">
               <div class='event-image'>
                <%= image_tag event.image_url(:eventphoto), :class => 'eimage', :style =>  'width:100%;' %>
               </div>
               <div class='event-content'>
                <h1 class='event-title'><%= event.name %></h1>
                <h2 class='event-place'><%= event.place %></h2>
                <h3 class='event-time-date'><%= event.date.strftime("%B %d @ %I:%M %p") %></h3>
               </div>
              </a>
             </div>
            </div>
         <% end %>
        </div>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
     </div>
    </div>
  </div>
</section>

<%= link_to 'New Event', new_event_path %>
