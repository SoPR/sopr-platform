<!DOCTYPE html>
<html>
<head>
  <title>Sopr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="//use.typekit.net/bfa1urd.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body>

<header id='header'>
  <div class='container'>
    <div class='row-fluid'>
      <div class='logo span2'>
        <%= link_to '/' do %>
         <h1>Startup of Puerto Rico</h1>
        <% end %>
      </div>
      <nav id='menu'>
        <ul>
          <li>Discussions</li>
          <li>Resources</li>
          <li><%= link_to 'Community Groups' %></li>
          <li><%= link_to 'Events', '/events' %></li>
          <li><%= link_to 'People', '/people' %></li>
          <li><%= link_to 'Startups', '/startups' %></li>
        </ul>
      </nav>
      <div class='span3 authentication'>
        <ul>
          <% if current_user %>
          <li class="dropdown last">
            <a class="dropdown-toggle nav-link" id="dLabel" data-toggle="dropdown" href="#" style='padding:18px 20px;'>
              <img class='user-image' src="<%= gravatar_for current_user %>">
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              <li>
                <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
              </li>
            </ul>
          </li>
          <% else %>
          <li class="dropdown last">
            <a class="dropdown-toggle nav-link" id="dLabel" data-toggle="dropdown" href="#">Sign in</a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              <li>
                <%= link_to "Sign in", new_user_session_path %>
              </li>
            </ul>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>


<%= yield %>


</body>
</html>
