<% content_for :subheader do %>
<section id="subheader">
  <div class="container">
    <div class='row-fluid'>
      <div class='span12'>
        <h1 class='subheader-form-title'>Sign up for Startup of Puerto Rico</h1>
      </div>
    </div>
  </div>
</section>
<% end %>
<div id='content'>
  <div class='container'>
    <div class='row-fluid'>
      <h2 class='forms-section-title'>Create your personal account</h2>
      <%= form_for(resource_name, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class='form-content'>
          <div class='span3'>
            <h3 class='form-label'><%= f.label :role %></h3>
          </div>
          <div class='span5' style='margin-top: 10px;'>
            <%= f.select :role, User.roles, :prompt => true %>
          </div>
          <div class='span4'>
            <p class='form-input-message' style='margin-top:18px;'>This is your role within the startup community.</p>
          </div>
        </div>
        <div class='form-content'>
          <div class='span3'>
            <h3 class='form-label'><%= f.label :full_name %></h3>
          </div>
          <div class='span5' style='margin-top: 10px;'>
            <%= f.text_field :full_name %>
          </div>
        </div>
        <div class='form-content'>
          <div class='span3'>
            <h3 class='form-label'><%= f.label :username %></h3>
          </div>
          <div class='span5' style='margin-top: 10px;'>
            <%= f.text_field :username %>
          </div>
        </div>
        <div class='form-content'>
          <div class='span3'>
            <h3 class='form-label'><%= f.label :email %></h3>
          </div>
          <div class='span5' style='margin-top: 10px;'>
            <%= f.email_field :email %>
          </div>
        </div>
        <div class='form-content'>
          <div class='span3'>
            <h3 class='form-label'><%= f.label :password %></h3>
          </div>
          <div class='span5' style='margin-top: 10px;'>
            <%= f.password_field :password %>
          </div>
        </div>
        <div class='form-content-action'>
          <%= f.submit "Sign up", :class => 'main-btn blue-btn btn-large' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
