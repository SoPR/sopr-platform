<div id='content'>
  <div class='container'>
    <div class='row-fluid'>
      <div class='login-wrapper'>
        <div class='info-cards' style='padding:0;'>
          <div class='login-wrapper-title'>
            <h2>Forgot your password?</h2>
          </div>
          <div class='login-form-wrapper'>
            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
              <%= devise_error_messages! %>
              <div>
                <%= f.label :email, :class => 'form-label-login' %>
                <%= f.email_field :email, :autofocus => true %>
              </div>
              <div class='form-login-action'>
                 <%= f.submit "Send me reset password instructions", :class => 'main-btn btn-medium', :style => 'padding:10px 25px;' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class='shared-links-wrapper'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
