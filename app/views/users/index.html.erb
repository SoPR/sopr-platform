<% content_for :subheader do %>
<section id='subheader-image' class='subheader-image-talent'>
  <div class='subheader-opacity'></div>
  <div class='container-fluid container-padding'>
    <div class='row-fluid subheader-wrapper-content'>
      <h2 class='subheader-tile'>People</h2>
      <p class='subheader-subtitle'>A collection of creative talent from Puerto Rico </p>
    </div>
  </div>
</section>
<% end %>
<section id='content'>
  <div class='container'>
    <div class='row-fluid'>
      <% @users.in_groups_of(3) do |group| %>
        <div class="row">
          <% group.compact.each do |user| %>
            <%= render 'user_card', user: user %>
          <% end %>
        </div>
      <% end %>

      <div class="row">
        <%= paginate @users %>
      </div>
    </div>
  </div>

</section>
