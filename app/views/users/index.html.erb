<section id="subheader">
  <div class="container">
    <div class='row-fluid'>
      <div class='span12'>
        <h1>People</h1>
        <h2>A collection of creative talent from P.R.</h2>
      </div>
    </div>
  </div>
</section>

<% @users.each do |user| %>
  <section id='content'>
    <div class='container'>
      <div class='row-fluid'>
        <div class='span3 usercard'>
          <div class='userimage'>
            <img class='user-image imagecard' src="<%= gravatar_for user %>">
          </div>
          <div class='userinfo'>
            <h1><%= user.full_name %></h1>
            <h3>Hacker</h3>
          </div>
          <div class='userabout'>
            <p>Entrepreneur, Designer and Engineer by training. Member of @StartupsOfPR.</p>
          </div>
          <div class='usersocial'>
            <ul>
              <li><a href="#"><i class='icon-facebook-1'></i></a></li>
              <li><a href="#"><i class='icon-twitter-1'></i></a></li>
              <li><a href="#"><i class='icon-linkedin-2'></i></a></li>
              <li><a href="#"><i class='icon-github'></i></a></li>
              <li><a href="#"><i class='icon-flickr'></i></a></li>
              <li><a href="#"><i class='icon-dribbble-1'></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
