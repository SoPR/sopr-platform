<div class='span6 startupcard'>
  <div class='startupcard-header'>
    <div class='startupimage'>
      <%= image_tag(startup.image_url(:thumb), :class => "startuplogo") %>
    </div>
    <div class='startupinfo'>
      <div class='startupinfo-head'>
        <h1><%= startup.name %></h1>
      </div>
      <div class='clearfix'></div>
      <div class='startupcontent'>
        <div class='startuppitch'>
          <%= startup.pitch %>
        </div>
        <% unless startup.website.blank? %>
          <div class="startup-website">
            <i class="icon-globe-2"></i>
            <a target="_blank" href="<%= escape_once(startup.website) %>">
              <%= startup.website %>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class='startupabout'>
    <%= startup.product %>
  </div>
</div>